{
  "name": "jquartz",
  "description": "",
  "version": "0.0.1",
  "homepage": "",
  "repository": "git@github.com:nicomuschert/jquartz.git",
  "author": "Nico Muschert",
  "license": "ISC",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/jquartz.js",
    "dist/jquartz.js.map",
    "dist/jquartz.css"
  ],
  "scripts": {
    "test": "ts-node node_modules/jasmine/bin/jasmine --config=jasmine.json",
    "coverage": "nyc -r text -e .ts -x 'tests/*.test.ts' npm run test",
    "watch": "tsc-watch",
    "build": "npm run transpile && npm run terse && npm run less",
    "transpile": "tsc -b --clean && tsc",
    "terse": "cd dist && terser jquartz.js -o jquartz.js --source-map \"content='jquartz.js.map'\" --config-file terser.json",
    "less": "lessc src/jquartz/index.less dist/jquartz.css",
    "lint": "eslint src",
    "fix": "eslint src --fix"
  },
  "dependencies": {
    "@types/jquery": "^3.5.14",
    "@types/node": "^18.7.16",
    "@typescript-eslint/eslint-plugin": "^5.36.2",
    "@typescript-eslint/parser": "^5.36.2",
    "eslint": "^8.23.0",
    "less": "^4.1.3",
    "terser": "^5.15.0",
    "ts-node": "^10.9.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.3"
  }
}
