{
  "compilerOptions": {
    "rootDir": "src",
    "target": "es2018",
    "lib": [
      "dom"
    ],
    "newLine": "lf",
    "jsx": "react",
    "jsxFactory": "_jsx",
    "jsxFragmentFactory": "_jsxf",
    "strict": true,
    "noImplicitThis": false,
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceRoot": "src",
    "sourceMap": true,
    "declaration": false
  },
  "exclude": [
    "tests"
  ],
  "include": [
    "src/types.d.ts",
    "src/**/*.ts"
  ]
}
